---
import type { Form as Props } from '~/types';
import Button from '~/components/ui/Button.astro';

const { inputs, textarea, disclaimer, button = 'Wyślij wiadomość', description = '' } = Astro.props;
---

<form id="contact-form" class="contact-form">
  <div id="form-message" class="hidden mb-4 p-4 rounded-lg"></div>

  {
    inputs &&
      inputs.map(
        ({ type = 'text', name, label = '', autocomplete = 'on', placeholder = '' }) =>
          name && (
            <div class="mb-4">
              {label && (
                <label for={name} class="block text-sm font-medium mb-1">
                  {label}
                </label>
              )}
              <input
                type={type}
                name={name}
                id={name}
                autocomplete={autocomplete}
                placeholder={placeholder}
                required={name === 'name' || name === 'email'}
                class="py-2 px-3 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
              />
            </div>
          )
      )
  }

  {
    textarea && (
      <div class="mb-4">
        <label for="textarea" class="block text-sm font-medium mb-1">
          {textarea.label}
        </label>
        <textarea
          id="textarea"
          name={textarea.name ? textarea.name : 'message'}
          rows={textarea.rows ? textarea.rows : 3}
          placeholder={textarea.placeholder}
          required
          class="py-2 px-3 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
        />
      </div>
    )
  }

  {
    disclaimer && (
      <div class="mt-3 flex items-start">
        <div class="flex mt-0.5">
          <input
            id="disclaimer"
            name="disclaimer"
            type="checkbox"
            required
            class="cursor-pointer h-4 w-4 rounded border-gray-300 dark:border-gray-600 text-primary focus:ring-primary dark:bg-slate-800 dark:checked:bg-primary"
          />
        </div>
        <div class="ml-3">
          <label for="disclaimer" class="cursor-pointer select-none text-sm text-gray-600 dark:text-gray-400">
            {disclaimer.label}
          </label>
        </div>
      </div>
    )
  }

  {
    button && (
      <div class="mt-6 grid">
        <Button variant="primary" type="submit">
          {button}
        </Button>
      </div>
    )
  }

  {
    description && (
      <div class="mt-2 text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400">{description}</p>
      </div>
    )
  }
</form>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message') as HTMLDivElement;

  // Set custom Polish validation messages
  if (form) {
    const nameInput = form.querySelector('input[name="name"]') as HTMLInputElement;
    const emailInput = form.querySelector('input[name="email"]') as HTMLInputElement;
    const phoneInput = form.querySelector('input[name="phone"]') as HTMLInputElement;
    const messageInput = form.querySelector('textarea[name="message"]') as HTMLTextAreaElement;
    const disclaimerInput = form.querySelector('input[name="disclaimer"]') as HTMLInputElement;

    // Polish validation messages for name
    if (nameInput) {
      nameInput.addEventListener('invalid', () => {
        if (nameInput.validity.valueMissing) {
          nameInput.setCustomValidity('Proszę podać imię i nazwisko.');
        }
      });
      nameInput.addEventListener('input', () => {
        nameInput.setCustomValidity('');
      });
    }

    // Polish validation messages for email
    if (emailInput) {
      emailInput.addEventListener('invalid', () => {
        if (emailInput.validity.valueMissing) {
          emailInput.setCustomValidity('Proszę podać adres e-mail.');
        } else if (emailInput.validity.typeMismatch) {
          emailInput.setCustomValidity('Proszę podać prawidłowy adres e-mail.');
        }
      });
      emailInput.addEventListener('input', () => {
        emailInput.setCustomValidity('');
      });
    }

    // Polish validation messages for phone (optional field)
    if (phoneInput) {
      phoneInput.addEventListener('invalid', () => {
        if (phoneInput.validity.valueMissing) {
          phoneInput.setCustomValidity('Proszę podać numer telefonu.');
        } else if (phoneInput.validity.typeMismatch) {
          phoneInput.setCustomValidity('Proszę podać prawidłowy numer telefonu.');
        }
      });
      phoneInput.addEventListener('input', () => {
        phoneInput.setCustomValidity('');
      });
    }

    // Polish validation messages for message
    if (messageInput) {
      messageInput.addEventListener('invalid', () => {
        if (messageInput.validity.valueMissing) {
          messageInput.setCustomValidity('Proszę wpisać wiadomość.');
        }
      });
      messageInput.addEventListener('input', () => {
        messageInput.setCustomValidity('');
      });
    }

    // Polish validation messages for disclaimer checkbox
    if (disclaimerInput) {
      disclaimerInput.addEventListener('invalid', () => {
        if (disclaimerInput.validity.valueMissing) {
          disclaimerInput.setCustomValidity('Proszę zaakceptować warunki przetwarzania danych osobowych.');
        }
      });
      disclaimerInput.addEventListener('change', () => {
        disclaimerInput.setCustomValidity('');
      });
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      phone: formData.get('phone'),
      message: formData.get('message'),
    };

    // Show loading state
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton.textContent;
    submitButton.disabled = true;
    submitButton.textContent = 'Wysyłanie...';

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        messageDiv.className = 'mb-4 p-4 rounded-lg bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200';
        messageDiv.textContent = 'Dziękujemy! Twoja wiadomość została wysłana. Odezwiemy się wkrótce.';
        messageDiv.classList.remove('hidden');
        form.reset();
      } else {
        throw new Error('Failed to send message');
      }
    } catch (error) {
      messageDiv.className = 'mb-4 p-4 rounded-lg bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200';
      messageDiv.textContent = 'Wystąpił błąd podczas wysyłania wiadomości. Spróbuj ponownie.';
      messageDiv.classList.remove('hidden');
    } finally {
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    }
  });
</script>
