---
export const prerender = true;

import PageLayout from '~/layouts/PageLayout.astro';
import { getAllCityPages } from '~/lib/cities';

const cities = getAllCityPages();

// Sort cities alphabetically by name
const sortedCities = cities.sort((a, b) => a.miasto.localeCompare(b.miasto, 'pl'));
---
export const prerender = true;


<PageLayout
  metadata={{
    title: 'Automatyzacja procesów biznesowych dla miast - UczciweIT',
    description: 'Oferujemy kompleksowe usługi automatyzacji procesów biznesowych, marketingowych i e-commerce dla firm w całej Polsce. Sprawdź ofertę dla swojego miasta.',
    robots: {
      index: true,
      follow: true,
    },
  }}
>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200">
        Automatyzacja procesów biznesowych<br />
        <span class="text-accent dark:text-white highlight">dla miast</span>
      </h1>
      <p class="text-xl text-muted dark:text-slate-400 max-w-3xl mx-auto">
        Oferujemy kompleksowe usługi automatyzacji procesów biznesowych, marketingowych i e-commerce
        dla firm w całej Polsce. Sprawdź ofertę automatyzacji procesów biznesowych w swoim mieście:
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {sortedCities.map((city) => (
        <a
          href={`/${city.Slug}`}
          class="block p-4 rounded-lg border border-gray-200 dark:border-slate-800 hover:border-primary dark:hover:border-primary transition-colors duration-200 hover:shadow-md"
        >
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
            {city.miasto}
          </h2>
          <p class="text-sm text-muted dark:text-slate-400 mt-1">
            Automatyzacja biznesu w {city['miasto-odmienione']}
          </p>
        </a>
      ))}
    </div>

    <div class="mt-16 text-center">
      <h2 class="text-2xl font-bold mb-4 dark:text-white">
        Nie znalazłeś swojego miasta?
      </h2>
      <p class="text-muted dark:text-slate-400 mb-6">
        Skontaktuj się z nami - obsługujemy klientów w całej Polsce!
      </p>
      <a href="/kontakt" class="btn btn-primary">
        Skontaktuj się z nami
      </a>
    </div>
  </section>
</PageLayout>
