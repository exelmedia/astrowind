---
export const prerender = true;

import type { GetStaticPaths } from 'astro';
import PageLayout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import { getAllCityPages, type CityPage } from '~/lib/cities';

export const getStaticPaths: GetStaticPaths = () => {
  const cities = getAllCityPages();

  return cities.map((city) => ({
    params: { city: city.Slug },
    props: { cityData: city },
  }));
};

interface Props {
  cityData: CityPage;
}

const { cityData } = Astro.props;
---
export const prerender = true;


<PageLayout
  metadata={{
    title: cityData.rank_math_title,
    description: cityData.rank_math_description,
    robots: {
      index: true,
      follow: true,
    },
  }}
>
  <!-- Hero Section -->
  <Hero>
    <Fragment slot="title">
      Automatyzacja procesów biznesowych<br />
      <span class="text-accent dark:text-white highlight">{ cityData.miasto }</span>
    </Fragment>

    <Fragment slot="subtitle">
      Unikalne warunki współpracy przy automatyzacji procesów Twojej firmy w <strong>{ cityData['miasto-odmienione'] }</strong>.
      Nasze usługi automatyzacji opierają się na uczciwych zasadach.
    </Fragment>
  </Hero>

  <!-- Content Section -->
  <Content
    title="Czym jest automatyzacja procesów biznesowych?"
    subtitle={`Kompleksowe rozwiązania dla firm w ${cityData['miasto-odmienione']}`}
    items={[
      {
        title: 'Automatyzacja marketingu',
        description: `Zwiększ efektywność kampanii marketingowych Twojej firmy w ${cityData['miasto-odmienione']}. Automatyzujemy e-mail marketing, social media, lead nurturing i więcej.`,
      },
      {
        title: 'Automatyzacja e-commerce',
        description: `Usprawnij zarządzanie sklepem internetowym - od obsługi zamówień, przez fakturowanie, aż po komunikację z klientami w ${cityData['miasto-odmienione']}.`,
      },
      {
        title: 'Automatyzacja procesów',
        description: `Zautomatyzuj powtarzalne zadania w Twojej firmie. Oszczędzaj czas i redukuj błędy dzięki inteligentnym rozwiązaniom dostosowanym do potrzeb firm z ${cityData['miasto-odmienione']}.`,
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Dedykowane rozwiązania dla {cityData.miasto}
      </h3>
      <p>
        Oferujemy kompleksowe usługi automatyzacji dla firm działających w {cityData['miasto-odmienione']} i okolicach.
        Niezależnie od branży i wielkości firmy, pomożemy Ci usprawnić procesy biznesowe.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features Section -->
  <Features3
    title={`Nasze usługi w ${cityData['miasto-odmienione']}`}
    subtitle="Co możemy zautomatyzować w Twojej firmie?"
    columns={3}
    items={[
      {
        title: 'Procesy marketingowe',
        description: 'Email marketing, social media, kampanie reklamowe, analytics',
        icon: 'tabler:rocket',
      },
      {
        title: 'Procesy sprzedażowe',
        description: 'CRM, lead generation, obsługa klienta, fakturowanie',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Procesy biznesowe',
        description: 'Workflow, dokumenty, raporty, integracje systemów',
        icon: 'tabler:briefcase',
      },
      {
        title: 'E-commerce',
        description: 'Sklepy online, zarządzanie magazynem, synchronizacja platform',
        icon: 'tabler:building-store',
      },
      {
        title: 'Analityka i raporty',
        description: 'Dashboardy, KPI, raporty automatyczne, monitoringi',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Integracje',
        description: 'API, webhooks, synchronizacja danych między systemami',
        icon: 'tabler:plug',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title={`Gotowy na automatyzację w ${cityData['miasto-odmienione']}?`}
    subtitle="Skontaktuj się z nami i dowiedz się, jak możemy pomóc Twojej firmie"
    actions={[
      {
        variant: 'primary',
        text: 'Skontaktuj się',
        href: '/kontakt',
      },
      {
        variant: 'secondary',
        text: 'Nasze usługi',
        href: '/uslugi',
      },
    ]}
  />
</PageLayout>
